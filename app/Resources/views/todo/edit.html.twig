{% extends "todo/base.html.twig" %}
{% block content %}
<form action="{{ url('todoSave') }}" method="post" role="form" name="toDoForm">
  <input type="hidden" name="id" value="{{ todo.getID() }}" />
  <div class="form-group">
    <label for="task">Task:</label>
    <input class="form-control" name="task" id="task" value="{{ todo.getTask() }}">
  </div>
  <div class="checkbox">
    <label>
    	<input 
    		type="checkbox" 
    		name="complete" 
    		id="complete" 
    		{% if todo.getComplete() %}checked{% endif %} />
    	Completed?
    </label>
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
{% endblock %}